<div class="row">
	<div class="col-lg-6">
		<div class = "container product_show">
		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Name:</strong>
		  <%= @product.name %>
		</p>

		<p>
		  <strong>Description:</strong>
		  <%= @product.description %>
		</p>
			<p>
		  <strong>Color:</strong>
		  <%= @product.color %>
		</p>
		<p>
		  <strong>Price:</strong>
		  <%= @product.price %>
		</p>
		<p>

		  <%= image_tag (@product.image_url) %>
		</p>
		
		<%= render 'testimonials' %>
		
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %>
		</div>
	</div>
</div>
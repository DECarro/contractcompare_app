<div class="conainer article">
	<div class="row">
		<div class="col-lg-6">

			<%= render 'article' %>
			

			<div class="container show_comments">
				<h4> Comments</h4>
					<% @article.comments.each do |comment| %>
					<p>
						<strong>Commenter:</strong>
						<%=comment.commenter %>
					</p>
					<p>
						<stong>Comment:</stong>
						<%= comment.content %>
					</p>
					<p><%= link_to 'Delete Comment', [comment.article, comment], 
						method: :delete,
						data: { confirm: 'Are you sure?' } %> 
					</p>
					<%end%>
			</div>

			
			<div class="container add_comment">
			<h4> Add a comment:</h4>
				<%= form_for ([@article, @article.comments.build]) do |f| %>
				<p>
					<%= f.label :commenter %><br>
					<%= f.text_field :commenter %>
				</p>
				<p>
					<%= f.label :content %> <br>
					<%= f.text_area :content %>
				</p>
				<p>
					<%= f.submit %>
				</p>
				<%end%>
		</div>
			
			
		</div>
	</div>
	<%= link_to 'View All', articles_path %> |

</div>